{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist",
    "target": "es6",
    "module": "es6",
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "types": [
      "cypress",
      "node"
    ],
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "./src/**/*.cy.tsx",
    "cypress.d.ts"
  ]
}